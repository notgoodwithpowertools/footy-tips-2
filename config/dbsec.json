".write": "root.child('/admins/$user_id').val() === false"

{
  "rules": {
    ".read": "auth !== null",
    ".write": "auth !== null",
    "teams": {
      ".read": true,
      ".write": false
  },
  "users": {
    "$user_id": {
      ".read": "$user_id === auth.uid",
      ".write": "$user_id === auth.uid"
    }
  },
  "leaderboard": {
    ".read": true,
    ".write": false
  },
  "games": {
    ".read": true,
    ".write": false
  },
  "admins": {
    ".read": true,
    ".write": false
  }
}
}
